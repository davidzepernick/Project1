<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">List of Articles</div>
  
  <div class="panel-body">
    
    <table>
      <tr colspan="3">
        <td>This is a current list of existing articles</td>
        <td width=500px></td>
        <td><a class="btn btn-primary" href="/articles/new" role="button">New Article</a></td>
      </tr>
    </table>
  </div>

  <div class="well well-lg">
  <!-- Table -->
  <table class="table">
    <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'You are taking chances buddy. Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
  </div>
</div>