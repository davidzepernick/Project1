<div class="well well-lg">
  <h1>List of Articles</h1>
  <div class="row">
    <div class="col-md-6">This is a current list of existing articles</div>
    <div class="col-md-5 text-right">
        <div class="visible-lg-inline-block visible-md-block visible-sm-block visible-xs-block">
            <a class="btn btn-primary" href="/articles/new" role="button">New Article</a>
        </div>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="row">&nbsp;</div>
  <table class="table">
    <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'You are taking chances buddy. Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
</div>
